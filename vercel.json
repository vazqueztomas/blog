{
    "version":2,
    "build":
    {
        "buildCommand": "python manage.py migrate && python manage.py collectstatic --noinput"
    },
    "builds":[
        {
            "src":"personal_blog/wsgi.py",
            "use":"@vercel/python",
            "config":{
                "maxLambdaSize":"15mb",
                "runtime":"Python3.9"
            }
        },
        {
            "src": "build.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles"
            }
        }
    ],
    "routes":[
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
          },
        {
            "src":"/(.*)",
            "dest":"personal_blog/wsgi.py"
        }
    ]
}